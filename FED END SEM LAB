<body>
  <div id="studentContainer"></div>

  <script>
    // 1. JSON object with student data and internet image
    const student = {
      name: 'Rahul Sharma',
      rollNumber: '12345',
      department: 'Computer Science',
      image: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=150&h=150&fit=crop&crop=face'  // Real profile photo from Unsplash
    };

    // Function to render student details
    function displayStudent() {
      const container = document.getElementById('studentContainer');
      container.innerHTML = `
        <div class="student-card">
          <!-- 3. Profile Image from Internet -->
          <img src="${student.image}" alt="${student.name}" class="student-image" onerror="this.src='https://via.placeholder.com/120/ddd/666?text=Photo'">
          
          <!-- 2. Student Details -->
          <h2>${student.name}</h2>
          <p><strong>Roll Number:</strong> ${student.rollNumber}</p>
          <p><strong>Department:</strong> ${student.department}</p>
        </div>
      `;
    }

    // Display student when page loads
    displayStudent();
  </script>
</body>
